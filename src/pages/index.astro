---
import Layout from 'src/Layouts/PageLayout.astro';
import {
	HOME_TITLE,
	HOME_DESCRIPTION,
	RECENT_POSTS,
	SOCIALS,
} from 'src/constants';
import Link from 'src/components/Link.astro';
---

<Layout pageTitle={HOME_TITLE} description={HOME_DESCRIPTION}>
	<!-- Name Heading -->
	<h1 class='font-heading text-3xl font-bold mb-6 text-gray-900'>Ashirbad</h1>

	<!-- About Section -->
	<div class='mb-8 space-y-4 text-gray-700 leading-relaxed'>
		<p>
			Hello, I'm Ashirbad - a software engineer currently working in frontend
			and learning my way around backend engineering.
		</p>
		<p>
			Outside of programming, I'm into reading, traveling, and <Link
				href={SOCIALS.aniList}>anime</Link
			> to name a few.
		</p>
		<p>
			This is my personal space on the internet. This website doesn't have any
			particular theme to it - I built this to share my thoughts and learnings
			as I fumble through life and career.
		</p>
		<p>
			I'm always open for a conversation or random chit-chat. feel free to
			message me on <Link href={SOCIALS.linkedin}>linkedin</Link>, <Link
				href={SOCIALS.twitter}>twitter</Link
			>, discord (@ashirbad29) or shoot me an email at <Link
				href={`mailto:${SOCIALS.email}`}>{SOCIALS.email}</Link
			>.
		</p>
	</div>

	<div class='flex gap-3 mb-12'>
		<Link
			href={SOCIALS.github}
			class='flex items-center gap-2 px-3 py-1.5 rounded-md border border-gray-200 bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors'
		>
			<svg
				class='w-4 h-4'
				fill='none'
				stroke='currentColor'
				viewBox='0 0 24 24'
			>
				<path
					stroke-linecap='round'
					stroke-linejoin='round'
					stroke-width='2'
					d='M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4'></path>
			</svg>
			<span class='text-sm'>GitHub</span>
		</Link>
		<Link
			href='/feed'
			class='flex items-center gap-2 px-3 py-1.5 rounded-md border border-gray-200 bg-gray-50 text-gray-700 hover:bg-gray-100 transition-colors'
		>
			<svg class='w-4 h-4' fill='currentColor' viewBox='0 0 24 24'>
				<path
					d='M6.503 20.752c0 1.794-1.456 3.248-3.251 3.248-1.796 0-3.252-1.454-3.252-3.248 0-1.794 1.456-3.248 3.252-3.248 1.795.001 3.251 1.454 3.251 3.248zm-6.503-12.572v4.811c6.05.062 10.96 4.966 11.022 11.009h4.817c-.062-8.71-7.118-15.758-15.839-15.82zm0-3.368c10.58.046 19.152 8.594 19.183 19.188h4.817c-.03-13.231-10.755-23.954-24-24v4.812z'
				></path>
			</svg>
			<span class='text-sm'>RSS Feed</span>
		</Link>
	</div>

	<section>
		<h2 class='font-heading text-2xl font-bold mb-6 text-gray-900'>
			Recent Posts
		</h2>
		<ul class='space-y-3'>
			{
				RECENT_POSTS.map(post => (
					<li class='flex justify-between items-center'>
						<Link href='#' class='text-gray-700'>
							{post.title}
						</Link>
						<span class='text-sm text-gray-500'>{post.date}</span>
					</li>
				))
			}
		</ul>
	</section>
</Layout>
