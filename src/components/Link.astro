---
interface Props {
	href: string;
	class?: string;
	noStyles?: boolean;
}

const { href, class: className = '', noStyles = false } = Astro.props;

const isExternal =
	href.startsWith('http') ||
	href.startsWith('//') ||
	href.startsWith('mailto:');

const externalAttrs = isExternal
	? { rel: 'noopener noreferrer', target: '_blank' }
	: {};

// Base link styling - can be overridden with custom classes
const baseClasses = noStyles ? '' : 'text-blue-600 underline transition-colors';
const finalClasses = `${baseClasses} ${className}`.trim();
---

<a href={href} class={finalClasses} {...externalAttrs}><slot /></a>
